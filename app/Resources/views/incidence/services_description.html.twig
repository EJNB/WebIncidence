{% if services_description is defined %}
    <label for="service_selection">Servicio</label>
    <select id="service_selection" class="form-control selectpicker" data-live-search="true" title="Seleccione el servicio" name="service">
        <option value="">Ninguno</option>
        {% for service in services_description %}
            <option value="{{ service['OPTID'] }}"
                    {% if incidence is defined %}
                        {% if  service['OPTID']==incidence.service.tourplanId %}
                            selected
                        {% endif %}
                    {% endif %}
                    >
                {{ service['SUPNAME'] }} - {{ service['OPTNAME'] }}
            </option>
        {% endfor %}
    </select>
{% endif %}
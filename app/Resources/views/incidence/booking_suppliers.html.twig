{% if suppliers is defined %}
    <label for="supplier_selection">Proveedor</label>
    <select id="supplier_selection" class="form-control selectpicker" data-live-search="true" title="Seleccione el proveedor" onchange="showServicesBySupplier(this.value)" name="supplier">
        {% for supplier in suppliers%}
            <option value="{{ supplier['SUPCODE'] }}">{{ supplier['SUPNAME'] }}</option>
        {% endfor %}
    </select>
{% endif %}
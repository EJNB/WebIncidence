{% extends 'base.html.twig' %}

{% block body %}
    <h1>Incidence</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ incidence.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ incidence.code }}</td>
            </tr>
            <tr>
                <th>Incidencedate</th>
                <td>{% if incidence.incidenceDate %}{{ incidence.incidenceDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ incidence.description }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ incidence.document }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('incidence_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('incidence_edit', { 'id': incidence.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

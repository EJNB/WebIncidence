{% form_theme edit_form 'form/fields.html.twig' %}
{% extends ':layouts:main-layout.html.twig' %}

{% block content %}
    <h1 class="page-header">Department edit</h1>
    <div class="container">
            {{ form_start(edit_form) }}
        <div class="col-md-4">
                {{ form(edit_form) }}

            <button class="btn btn-info">Editar</button>
            <a class="btn btn-danger link-eliminar" href="javascript:void(0)" data-url="{{ path('department_delete',{'id':department.id}) }}" data-toggle="modal" data-target="#modal-delete" data-descripcion="{{ department.name }}">Eliminar</a>
            <a href="{{ path('department_index') }}" class="btn btn-default">Regresar al listado</a>

        </div>

    </div>

    {{ form_end(edit_form) }}

{% endblock %}

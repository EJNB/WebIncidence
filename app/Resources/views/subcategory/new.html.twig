{% form_theme form 'form/fields.html.twig' %}
{% extends ':layouts:main-layout.html.twig' %}

{% block content %}
<div class="container">
    <h1 class="page-header">Subcategory creation</h1>

    {{ form_start(form) }}
    <div class="col-md-3">
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}
        <input type="submit" value="Create" class="btn btn-info"/>
        <a href="{{ path('subcategory_index') }}" class="btn btn-default">Back to the list</a>
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}

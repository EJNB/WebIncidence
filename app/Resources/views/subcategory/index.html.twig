{% form_theme form 'form/fields.html.twig' %}
{% extends ':layouts:main-layout.html.twig' %}

{% block content %}
    <h1 class="page-header">Subcategorias</h1>

    <table class="table table-responsive table-hover">
        <thead>
        <tr>
            <th style="width: 30%">Categoria</th>
            <th style="width: 30%">Subcategoria</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for subCategory in subCategories %}
            <tr>
                <td>{{ subCategory.category }}</td>
                <td>{{ subCategory.name }}</td>
                <td>
                    <a href="{{ path('subcategory_edit', { 'id': subCategory.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="link-eliminar link-tooltip" href="javascript:void(0);"
                       data-url="{{ path('subcategory_delete', { 'id': subCategory.id }) }}"
                       data-descripcion="{{ subCategory.name }}"
                       data-toggle="modal" data-target="#modal-delete"
                       data-placement="top" title="Eliminar">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        {{ form_start(form) }}
        <tr>
            <td>
                {{ form_row(form.category) }}
            </td>
            <td>
                {{ form_row(form.name) }}
            </td>
            <td>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </div>
            </td>
        </tr>
        {{ form_end(form) }}
        </tbody>
    </table>

{% endblock %}
